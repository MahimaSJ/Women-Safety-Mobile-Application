<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.WomenSafetyApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>
        <!-- General Button Style -->
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

        <!-- Operator Button Style -->
    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:background">@drawable/operator_button_background</item>
    </style>

        <!-- Equal Button Style -->
    <style name="EqualButton" parent="OperatorButton">
        <item name="android:background">@drawable/equal_button_background</item>
    </style>

</resources>
